<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity.employeeList.EmployeeList">

    <RelativeLayout
        android:id="@+id/layout_Taskbar_EmployeeList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageButton
            android:id="@+id/imageButton_CreateEmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons_add_employee"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/textView_Label_EmployeeList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Employee List"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextLabel"/>
        <ImageButton
            android:id="@+id/imageButton_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icons8_back_32"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

    <AutoCompleteTextView
        android:id="@+id/editText_SearchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_Taskbar_EmployeeList"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_edit_text"
        android:layout_marginHorizontal="30dp"
        android:hint="Search Name"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="30dp"
        android:textSize="20sp"/>
    <ImageButton
        android:id="@+id/imageButton_SearchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/editText_SearchName"
        android:src="@drawable/icons8_find_user_32"
        android:background="@android:color/transparent"
        android:layout_alignTop="@id/editText_SearchName"
        android:layout_alignBottom="@id/editText_SearchName"
        android:layout_centerVertical="true"
        android:padding="10dp"/>

    <ListView
        android:id="@+id/listView_Employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_SearchName"
        android:padding="10dp"
        android:paddingEnd="5dp"
        android:layout_toLeftOf="@id/imageButton_BottomList"/>

    <ImageButton
        android:id="@+id/imageButton_TopList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icons8_slide_up_32"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:paddingEnd="5dp"
        android:layout_marginBottom="50dp"/>
    <ImageButton
        android:id="@+id/imageButton_BottomList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icons8_down_button2_32"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:paddingEnd="5dp"
        android:layout_below="@id/editText_SearchName"
        android:layout_marginTop="50dp"
        />



</RelativeLayout>