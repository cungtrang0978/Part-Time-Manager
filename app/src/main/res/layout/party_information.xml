<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_employee_information"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView_Name_partyInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#0086b3"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/textView_Date_partyInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="20sp"
        android:layout_below="@id/textView_Name_partyInfo"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin Time"
        android:textSize="20sp"
        android:id="@+id/textView_TimeBegin_partyInfo"
        android:layout_below="@id/textView_Date_partyInfo"
        android:layout_alignStart="@id/textView_Name_partyInfo"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:textSize="20sp"
        android:id="@+id/textView_TimeEnd_partyInfo"
        android:layout_alignTop="@id/textView_TimeBegin_partyInfo"
        android:layout_toRightOf="@id/textView_TimeBegin_partyInfo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Floor"
        android:textSize="20sp"
        android:id="@+id/textView_Floor_partyInfo"
        android:layout_below="@id/textView_TimeEnd_partyInfo"
        android:layout_alignStart="@id/textView_Name_partyInfo"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="20sp"
        android:id="@+id/textView_Location_partyInfo"
        android:layout_alignTop="@id/textView_Floor_partyInfo"
        android:layout_toEndOf="@id/textView_Floor_partyInfo"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hourly Wage"
        android:textSize="20sp"
        android:id="@+id/textView_HourlyWage_partyInfo"
        android:layout_below="@id/textView_Floor_partyInfo"
        android:layout_alignStart="@id/textView_Name_partyInfo"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Part-timer"
        android:textSize="20sp"
        android:id="@+id/textView_NumOfEmps_partyInfo"
        android:layout_below="@id/textView_HourlyWage_partyInfo"
        android:layout_alignStart="@id/textView_Name_partyInfo"
        android:layout_marginStart="20dp"/>


</RelativeLayout>